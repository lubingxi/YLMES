        <form class="form form-horizontal" id="form-article-add">
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>任务编号：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="@ViewData["tid"]" readonly="readonly" placeholder="" id="TaskID" name="TaskID">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>进度编号：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="@ViewData["item"]" readonly="readonly" placeholder="" id="Item" name="Item">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>时间从：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" onfocus="WdatePicker()" value="@ViewData["from"]" id="From" name="From" class="input-text Wdate">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>时间到：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" onfocus="WdatePicker()" value="@ViewData["to"]" id="TO" name="TO" class="input-text Wdate">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>完成状况：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="@ViewData["ctd"]" placeholder="" id="ChildTaskDescription" name="ChildTaskDescription">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2">任务描述：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea name="StatusDescription" cols="" rows="" id="StatusDescription" class="textarea" dragonfly="true">@ViewData["cd"]</textarea>
                    <p class="textarea-numberbar"><em class="textarea-length"></em></p>
                </div>
            </div>
            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                    <button onclick="sub()" class="btn btn-primary radius" type="button"><i class="Hui-iconfont">&#xe632;</i>保存</button>
                </div>
            </div>
        </form>
    </article>

