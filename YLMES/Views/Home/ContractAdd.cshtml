<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/Hui-iconfont/1.0.8/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="~/static/h-ui.admin/css/style.css" />
    <title></title>
</head>
<body>

    <article class="page-container">
        <form class="form form-horizontal" id="form-article-add">
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>客户名称：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="" placeholder="" id="CuName" name="CuName">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>订单编号：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="" placeholder="" id="CuNumber" name="CuNumber"><i></i>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>合同金额：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="" placeholder="" id="Money" name="Money">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>是否安装：</label>
                <div class="formControls col-xs-8 col-sm-9">                 
                    <span class="select-box">
                        <select name="IfInstall" class="select" id="IfInstall">
                            <option value="是" selected="selected">是</option>
                            <option value="否">否</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>是否含税：</label>
                <div class="formControls col-xs-8 col-sm-9">                
                    <span class="select-box">
                        <select name="IfIncludeTax" class="select" id="IfIncludeTax">
                            <option value="是" selected="selected">是</option>
                            <option value="否">否</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>签订日期：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" onfocus="WdatePicker()" id="DateOfSign" name="DateOfSign" class="input-text Wdate">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>是否运输：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box">
                        <select name="IfTransport" class="select" id="IfTransport">
                            <option value="是" selected="selected">是</option>
                            <option value="否">否</option>
                        </select>
                        </span>
                    </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>合同状态：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box">
                        <select name="select" class="select" id="selectd" disabled="disabled">
                            <option value="0">未开始</option>
                            <option value="1">进行中</option>
                            <option value="2">已完成</option>
                        </select>
                    </span>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2">收款方式：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea name="Pay" cols="" rows="" id="Pay" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onkeyup="$.Huitextarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2">交期：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea name="SendDate" cols="" rows="" id="SendDate" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onkeyup="$.Huitextarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2">违约条件：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea name="weiyuetiaojian" cols="" rows="" id="weiyuetiaojian" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onkeyup="$.Huitextarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-2">合同总结：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <textarea name="CZongJie" cols="" rows="" id="CZongJie" class="textarea" placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onkeyup="$.Huitextarealength(this,200)"></textarea>
                    <p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
                </div>
            </div>
            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                    <button onclick="" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i>保存</button>
                    <button onclick="" class="btn btn-default radius" id="cancle" type="button">&nbsp;&nbsp;返回&nbsp;&nbsp;<i hidden="hidden" id="u">/Home/SalesCreation</i></button>
                </div>
            </div>
        </form>
    </article>

    <!--_footer 作为公共模版分离出去-->
    <script type="text/javascript" src="~/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="~/static/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="~/static/h-ui.admin/js/H-ui.admin.js"></script> <!--/_footer /作为公共模版分离出去-->
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript" src="~/lib/My97DatePicker/4.8/WdatePicker.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/jquery.validate.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/validate-methods.js"></script>
    <script type="text/javascript" src="~/lib/jquery.validation/1.14.0/messages_zh.js"></script>
    <script type="text/javascript" src="~/lib/webuploader/0.1.5/webuploader.min.js"></script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/ueditor.config.js"></script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/ueditor.all.min.js"> </script>
    <script type="text/javascript" src="~/lib/ueditor/1.4.3/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });
            $("#cancle").click(function () {
                var sd = $("#u").text();
                window.parent.document.getElementById("rightframe").src = sd;
            });
            //表单验证
            $("#form-article-add").validate({
                rules: {
                    CuName: {
                        required: true,
                    },
                    CuNumber: {

                        required: true,
                    },
                    Money: {
                        required: true,
                    },                   
                    DateOfSign: {
                        required: true,
                    },
                    select: {
                        required: true,
                    },             
                    abstract2: {
                        required: true,
                    },
                    abstract3: {
                        required: true,
                    },
                    author: {
                        required: true,
                    },
                    sources: {
                        required: true,
                    },
                    allowcomments: {
                        required: true,
                    },
                    commentdatemin: {
                        required: true,
                    },
                    commentdatemax: {
                        required: true,
                    },

                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {

                    var CuNamed = $("#CuName").val().trim();
                    var CuNumberd = $("#CuNumber").val().trim();
                    var Moneyd = $("#Money").val().trim();
                    var IfInstalld = $("#IfInstall option:selected").text();
                    var IfIncludeTax = $("#IfIncludeTax option:selected").text();
                    var qianDate = $("#DateOfSign").val();
                    var IfTransportd = $("#IfTransport option:selected").text();
                    var Select = $("#selectd option:selected").text();
                    var Payd = $("#Pay").val();
                    var SendDated = $("#SendDate").val();
                    var weiyuetiaojiand = $("#weiyuetiaojian").val();
                    var CZongJied = $("#CZongJie").val();
                    $.ajax({
                        url: "/Home/CwAdd",
                        data: { CuName: CuNamed, CuNumber: CuNumberd, Money: Moneyd, IfInstall: IfInstalld, IfIncludeTax: IfIncludeTax, DateOfSign: qianDate, IfTransport: IfTransportd, select: Select, Pay: Payd, SendDate: SendDated, weiyuetiaojian: weiyuetiaojiand, CZongJie: CZongJied },
                        type: "post",
                        dataType: "text",
                        success: function (data) {
                            if (data == "true") {
                                window.setTimeout(function () {
                                    alert("添加成功！");
                                    window.parent.document.getElementById("rightframe").src = "/Home/SalesCreation";
                                }, 500);
                            }
                            else {
                                alert("添加失败,合同编号不能重复!");
                                return;
                            }
                        }
                    });

                }
            });

            $list = $("#fileList"),
            $btn = $("#btn-star"),
            state = "pending",
            uploader;


        });
    </script>
    <!--/请在上方写此页面业务相关的脚本-->
</body>
</html>